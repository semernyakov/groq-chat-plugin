{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2020",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": ["DOM", "ES5", "ES6", "ES7", "ES2020"],
    "jsx": "react",
    "types": ["node", "react", "react-dom", "obsidian"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
